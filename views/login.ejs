<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập Spotify</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #121212;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .container {
            background-color: #121212;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            padding: 40px;
            width: 400px;
            text-align: center;
        }
        .logo {
            font-size: 36px;
            font-weight: bold;
            margin-bottom: 20px;
            color: #1ed760;
        }
        .logo img {
            width: 100px;
        }
        h2 {
            font-size: 24px;
            margin-bottom: 10px;
            color: white;
        }
        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 15px 20px;
            margin: 10px 0;
            border: none;
            background-color: #f2f2f2;
            border-radius: 5px;
            outline: none;
            justify-content: center;
        }
        input[type="submit"] {
            width: 100%;
            padding: 15px;
            margin-top: 20px;
            border: none;
            border-radius: 25px;
            background-color: #1DB954;
            color: #fff;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s ease;
            justify-content: center;
        }
        input[type="submit"]:hover {
            background-color: #1ED760;
        }
        .forgot-password {
            margin-top: 10px;
            text-decoration: none;
            color: #888;
            font-size: 14px;
        }
        .forgot-password:hover {
            color: #555;
        }
        .signup {
            margin-top: 20px;
            font-size: 16px;
            color: #888;
        }
        .signup a {
            color: #1DB954;
            text-decoration: none;
        }
        .signup a:hover {
            color: #1ED760;
        }
        .button{
            width: 250px;
            height: 40px;
            margin: 10px auto;
            justify-content: center;
            display: block;
            color: #fff;
            background: #1ED760;
            font-size: 1em;
            font-weight: bold;
            margin-top: 20px;
            outline: none;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: .5s ease-in-out;
        }

        .button:hover {
            background-color: #1abc9c;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="logo">Scopify</h1>
        <h2>Log in to Scopify</h2>
        <form id="loginForm">
            <input type="text" name="name" id="name" placeholder="Name">
            <input type="password" name="password" id="password" placeholder="Password" required><br>
            <button type="submit" class="button">Login</button>
        </form>
        <h4 id="resultMessage"></h4>
        <div class="signup">Don't have an account? <a href="/register">Sign up here</a></div>
    </div>
    <script>
        document.getElementById('loginForm').addEventListener('submit', async function(event) {
            event.preventDefault();

            const name = document.getElementById('name').value;
            const password = document.getElementById('password').value;
            const resultMessage = document.getElementById('resultMessage');

            try {
                const response = await fetch('/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ name, password })
                });

                const data = await response.json();
                if (data.success) {
                    resultMessage.style.color = 'green';
                    resultMessage.textContent = 'Login successful!';
                    window.location.href = '/main'; 
                } else {
                    resultMessage.style.color = 'red';
                    resultMessage.textContent = data.error;
                }
            } catch (error) {
                resultMessage.style.color = 'red';
                resultMessage.textContent = 'An error occurred during login.';
            }
        });
    </script>
</body>
</html>
